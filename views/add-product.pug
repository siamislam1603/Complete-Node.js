doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title Add Products
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            div.container-fluid
                a.navbar-brand(href='#') Menu
                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNavAltMarkup", aria-controls="navbarNavAltMarkup", aria-expanded="false", aria-label="Toggle navigation")
                    span.navbar-toggler-icon
            div.collapse.navbar-collapse#navbarNavAltMarkup
                div.navbar-nav
                    a.nav-link.active(aria-current="page", href="/") Home 
                    a.nav-link(href='/add-product') Add Products 
        div.container.mt-3
            form(action="/add-product", method='POST')
                div.mb-3
                    label.form-label(for="title") Title
                    input.form-control#title(type="text", name='title') 
                button.btn.btn-primary(type="submit") Submit